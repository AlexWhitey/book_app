<!DOCTYPE html>
<html>
<head>
    <title>Book App</title>
    <link rel="stylesheet" type="text/css" a href="/styles/reset.css">
    <link rel="stylesheet" type="text/css" a href="/styles/base.css">
    <link rel="stylesheet" type="text/css" a href="/styles/layout.css">
    <link rel="stylesheet" type="text/css" a href="/styles/modules.css">
  </head>
<body>
  <main>
  <h1>My Book List</h1>
  <p><a href="/">Home</a></p>
  <ul class="book">
    <% searchesResults.forEach(book => { %>
    <li>
      <img src=" <%= book.img_url %> ">
      <h2> <%= book.title %> </h2>
      <span> <%= book.author %> </span>
      <p> <%= book.description %> </p>

      <button type="button" id="formButton">Save This Book!</button>
      <form id="hidden-form" action="/" method="post">
        <fieldset class="hidden-field">
          <label for="title">
            <span>Title</span>
            <input type="text" name="title" value="<%= book.title %>" >
          </label>
          <label for="author">
            <span>author</span>
            <input type="text" name="author" value="<%= book.author %>" >
          </label>
          <label for="isbn">
            <span>isbn</span>
            <input type="text" name="isbn" value="<%= book.isbn %>" >
          </label>
          <label for="img_url">
            <span>img_url</span>
            <input type="text" name="img_url" value="<%= book.img_url %>" >
          </label>
          <label for="description">
            <span>description</span>
            <input type="text" name="description" value="<%= book.description %>" >
          </label>
        </fieldset>
        
      </form> 
    </li>
    <% }) %>
  </ul>
</main>

</body>

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script type="text/jquery" src="/js/app.js" ></script>


</html>
